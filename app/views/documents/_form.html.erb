<%= simple_form_for(@document) do |f| %>
  <%= f.error_notification %>
 
  <div class="form-inputs">

    <%= f.input :title, :label => "Título" %>
    <%= f.label 'Conteúdo' %>
    <%= f.file_field :contents, multiple: true %>
  
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <br/>
<% end %>